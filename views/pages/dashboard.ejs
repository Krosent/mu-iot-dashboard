                <div class="card-body bg-light">
                  <h5 class="card-title">device: <%= value.device %>
                  </h5>
                  <hr>
                  <h6 class="card-subtitle mb-2 text">- trigger: <%= value.trigger %>
                  </h6>
                  <h6 class="card-subtitle mb-2 text">- rule category: <%= value.category %>
